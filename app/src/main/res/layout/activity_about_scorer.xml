<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="500dp"
    android:layout_height="180dp"
    android:background="@color/grey" >

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_centerHorizontal="true"
        android:text="@string/about_scorer_tennis"
        android:textColor="#000000"
        android:textSize="@dimen/f_text_30" />

    <LinearLayout
        android:id="@+id/a_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/about_Scorer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="20sp"
            android:textColor="#000000" />
    </LinearLayout>

    <Button
        android:id="@+id/b_ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/b_bott_size"
        android:layout_below="@+id/a_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button1"
        android:onClick="onClick"
        android:text="@string/close"
        android:textSize="@dimen/f_text_15" />

</RelativeLayout>